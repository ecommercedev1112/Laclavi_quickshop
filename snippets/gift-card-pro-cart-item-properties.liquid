{% comment %}
/**
 * IMPORTANT!
 * Do not edit this file. Any changes made could be overwritten by the app at
 * any time. If you need assistance, please reach out to us at support@gist-apps.com.
 *
 * The below code is used to display gift card details on the cart page.
 */
{% endcomment %}
{% assign is_gift_card = "false" %}
{%- for p in item.properties -%}
  {% if p.first contains "_gcp" %}
    {% assign is_gift_card = "true" %}
  {% endif %}
{% endfor %}
{% if is_gift_card == "true" %}
{% capture bundlecontents %}
  {{ "giftcardpro.global.card_details" | t }}
{% endcapture %}
<span class="gcp__cart-properties">
  {% if bundlecontents contains "translation missing:" %}
    <span data-gcp-trans="global.bundle_contents">Giftcard Details</span><br/>
  {% else %}
    <span data-gcp-trans="global.bundle_contents">{{ "giftcardpro.global.card_details" | t }}</span><br/>
  {% endif %}
  <ul class="gcp__card-details">
  {%- for p in item.properties -%}
    {% if p.first contains "_gcp" and p.last != "" %}
      {% if  p.first contains "_gcp_locale" or p.first contains "_gcp_conversion_rate" %}
        {% continue %}
      {% endif %}
      {% if p.first contains "_gcp" and p.last contains "/images/" %}
        {% assign words = p.first | split: "_" %}
        {% assign sentence = words | join: " " | replace_first: "gcp", " " | strip %}
        <li><a class = "link" href="{{ p.last }}">{{ sentence | capitalize }}</a></li>
      {% else %}
        {% assign words = p.first | split: "_" %}
        {% assign sentence = words | join: " " | replace_first: "gcp", " " | strip %}
        <li>{{ sentence | capitalize }}: {{ p.last }}</li>
      {% endif %}
    {% endif %}
  {% endfor %}
  </ul>
</span>
{% endif %}
  	