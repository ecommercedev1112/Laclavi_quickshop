<script>
  $(document).ready(function() {
    $('.gallery-slider').slick({
      dots: false,
      infinite: true,
      speed: 300,
      slidesToShow: 3,
      slidesToScroll: 1,
      prevArrow: `<button type='button' class='slick-prev pull-left'><svg width="7" height="12" viewBox="0 0 7 12" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M6 12L0 6L6 0L6.8003 0.800302L1.6006 6L6.8003 11.1997L6 12Z" fill="white"/></svg></button>`,
      nextArrow: `<button type='button' class='slick-next pull-right'><svg width="7" height="12" viewBox="0 0 7 12" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0.800782 12L6.80078 6L0.800782 0L0.000480652 0.800302L5.20018 6L0.000480652 11.1997L0.800782 12Z" fill="white"/></svg></button>`,
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 3,
            slidesToScroll: 3,
            infinite: true,
            dots: true
          }
        },
        {
          breakpoint: 767,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 1,
            centerMode: false,
            variableWidth: true,
            arrows: true
          }
        }
      ]
    });
  });

$(document).ready(function() {
  if (screen && screen.width > 767) {
      $('.metafield-slider').slick({
      dots: false,
      infinite: true,
      speed: 300,
      slidesToShow: 2,
      slidesToScroll: 1,
      prevArrow: `<button type='button' class='slick-prev pull-left'><svg width="7" height="12" viewBox="0 0 7 12" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M6 12L0 6L6 0L6.8003 0.800302L1.6006 6L6.8003 11.1997L6 12Z" fill="white"/></svg></button>`,
      nextArrow: `<button type='button' class='slick-next pull-right'><svg width="7" height="12" viewBox="0 0 7 12" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0.800782 12L6.80078 6L0.800782 0L0.000480652 0.800302L5.20018 6L0.000480652 11.1997L0.800782 12Z" fill="white"/></svg></button>`,
    }); 
  }
  });

  $(document).on("click",".set.design-featured .set-header",function() {
   setTimeout(function() {
       $('.metafield-slider').slick('refresh');
   }, 200);
});

  
  $(document).ready(function() {
  $(".set .set-header").on("click", function() {
    if ($(this).hasClass("active")) {
      $(this).removeClass("active");
      $(this)
        .siblings(".set-content").slideUp(200);
    } else {
      $(".set .set-header").removeClass("active");
      $(this).addClass("active");
      $(".set-content").slideUp(200);
      $(this)
        .siblings(".set-content").slideDown(200);
    }
    $('.gallery-slider').slick('refresh');
  });
});

</script>

