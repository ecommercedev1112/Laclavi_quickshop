{% style %}  

 
  @media (max-width: 768px) {
  .product-title-font {
    font-size: {{ section.settings.title_size_mobile}}px !important;
    line-height: 22px !important;  
  }
  }
   {% if section.settings.slider_allow_position %}  
      .shopify-section .custom-product-info-accordion .set-content .set-content-row .gallery-slider .slick-prev {  
         top: -75px;  
         left: auto;  
         right: 80px;
         background: white;
      }
      .shopify-section .custom-product-info-accordion .set-content .set-content-row .gallery-slider .slick-prev svg,
      .shopify-section .custom-product-info-accordion .set-content .set-content-row .gallery-slider .slick-next svg {
         fill: #353535;
      }  
      .shopify-section .custom-product-info-accordion .set-content .set-content-row .gallery-slider .slick-next {  
         top: -75px;  
         right: 8px;  
         background: white;
      }

    @media (max-width: 1600px) {
      .shopify-section .custom-product-info-accordion .set-content .set-content-row .gallery-slider .slick-next,
      .shopify-section .custom-product-info-accordion .set-content .set-content-row .gallery-slider .slick-prev {
        top: -60px;
      }
    }
    @media (max-width: 425px) {
      .shopify-section .custom-product-info-accordion .set-content .set-content-row .gallery-slider .slick-next,
      .shopify-section .custom-product-info-accordion .set-content .set-content-row .gallery-slider .slick-prev {
        top: -35px;
      }.shopify-section .custom-product-info-accordion .set-content .set-content-row .gallery-slider .slick-prev {
        right: 50px;
      }
    }
   {% endif %}  
{% endstyle %}  

