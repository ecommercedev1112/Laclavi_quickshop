<div class="fabric-story-gallery">
  <div class="fabric-story-gallery-inner">
    <div class="fabric-story-gallery-row">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
        <div class="fabric-story-gallery-col">
          <div class="gallery-img">
            <img src="{{ block.settings.image | img_url: 'master' }}">
          </div>
        </div>
        {% endif %}
      {% endfor%}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Fabric Story Gallery",
  "tag": "section",
  "settings": [],
  "blocks": [
    {
      "type": "Image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Fabric Story Gallery"
    }
  ]
}
{% endschema %}
