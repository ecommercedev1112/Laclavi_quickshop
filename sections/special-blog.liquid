            "default": "<p></p>"
          },
          {
            "type": "richtext",
            "id": "button",
            "label": "Button",
            "default": "<p></p>"
          },
          {
            "type": "url",
            "id": "blog_btn_url",
            "label": "Blog Button URL"
          },
          {
            "type": "color",
            "id": "blog_bg_col_des",
            "label": "Blog Background Color Desktop",
            "default": "#C9BEAC"
          },
          {
            "type": "color",
            "id": "blog_bg_col_mb",
            "label": "Blog Background Color Mobile",
            "default": "#C9BEAC"
          },
          {
            "type": "color",
            "id": "blog_content_col_des",
            "label": "Blog Content Color Desktop",
            "default": "#F5F2EB"
          },
          {
            "type": "color",
            "id": "blog_content_col_mb",
            "label": "Blog Content Color Mobile",
            "default": "#F5F2EB"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Special Blog",
        "settings": {
        }
      }
    ]
  }
