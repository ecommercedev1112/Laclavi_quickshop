<div class="{% if section.settings.use_alt_bg %}use-alt-bg fully-padded-row--medium{% else %}fully-spaced-row--medium{% endif %}">
  <div class="container">
    <div class="flexible-layout valign-middle">
      <div class="column column--half {% if section.settings.image_position == 'right' %}column--order-push-desktop{% endif %}">
        {% if section.settings.button_link != blank -%}
          <a class="block-link" href="{{ section.settings.button_link }}">
        {%- endif %}
        <div class="image-overlap" style="max-width: {{ section.settings.image_width }}px">
          <div class="image-overlap__image image-overlap__image-1">
            {%- if section.settings.image == blank -%}
              <div class="placeholder-image">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
            {%- else -%}
              {%- render 'responsive-image',
                image: section.settings.image,
                animate: true,
                animate_delay: '0.1s',
                animate_type: 'cc-fade-in-up'
              -%}
            {%- endif -%}
          </div>

          {%- if section.settings.image == blank or section.settings.image_2 != blank -%}
            <div class="image-overlap__image image-overlap__image-2">
              {%- if section.settings.image_2 == blank -%}
                <div class="placeholder-image">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
              {%- else -%}
                {%- render 'responsive-image',
                  image: section.settings.image_2,
                  animate: true,
                  animate_delay: '0.3s',
                  animate_type: 'cc-fade-in-up'
                -%}
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
        {% if section.settings.button_link != blank %}</a>{% endif %}
      </div>

      <div class="column column--half align-{{ section.settings.text_alignment }}">
        <div class="feature-text-paired" data-cc-animate data-aos="fade-up" data-aos-duration="2000">
          {%- if section.settings.subheading != blank -%}
            <div class="subheading subheading--over">{{ section.settings.subheading | escape }}</div>
          {%- endif -%}

          {% if section.settings.title != blank %}
            {% if section.settings.use_h1 %}
              <h1 class="majortitle in-content">{{ section.settings.title | escape }}</h1>
            {% else %}
              <h3 class="majortitle in-content h1-style">{{ section.settings.title | escape }}</h3>
            {% endif %}
          {% endif %}

          <div class="rte"><span class="body21">{{ section.settings.text }}</span></div>

          {% if section.settings.button_label != blank %}
            <div class="lightly-spaced-row-above">
              <a
                class="{% if section.settings.button_style != 'link' %}btn btn--{{ section.settings.button_style }}{% else %}small-feature-link{% endif %}"
                href="{{ section.settings.button_link }}"
              >
                <span class="body18">{{- section.settings.button_label | escape }}</span>
                <svg width="19" height="20" viewBox="0 0 19 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M16.2718 10.6669L8.54919 18.3896L9.49979 19.3336L18.8332 10.0003L9.49979 0.666992L8.54919 1.61099L16.2718 9.33364H0.166504V10.6669H16.2718Z" fill="currentColor"/>
                </svg>
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
