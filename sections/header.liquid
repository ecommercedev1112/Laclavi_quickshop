{%- assign mobile_expand_with_entire_link = true -%}

{% style %}
  .logo img {
    width: {{ section.settings.logo_img_width_int }}px;
  }
  .logo-area__middle--logo-image {
    max-width: {{ section.settings.logo_img_width_int }}px;
  }
  .pcShow{
    display:block
  }
    .mbShow{
    display:none
  }
  .show-only-mb {
    display: flex !important;
  }
  .navigation--main--special .navigation__columns {
    padding-right: 0;
  }
  .navigation--main--special .navigation__tier-1 > .navigation__item > .navigation__link span,
  .logo-area__right__inner a span {
    color: {{ section.settings.menu_color }} !important;
  }
  .navigation--main--special .navigation__tier-1>.navigation__item:hover>.navigation__link span,
  .logo-area__right__inner a:hover span {
    color: {{ section.settings.menu_hover_color }} !important;
  }
  div#shopify-section-header div.logo-area__middle.logo-area__middle--logo-image .navigation__tier-1 .navigation__child-tier a.navigation__link h1 {
    color: {{ section.settings.submenu_color }} !important;
  }
  div#shopify-section-header div.logo-area__middle.logo-area__middle--logo-image .navigation__tier-1 .navigation__child-tier li:after{
    color: {{ section.settings.submenu_color }} !important;
  }
  div#shopify-section-header div.logo-area__middle.logo-area__middle--logo-image .navigation__tier-1 .navigation__child-tier a.navigation__link h1:hover{
    color: {{ section.settings.submenu_hover_color }} !important;
  }
  @media (min-width:1280px) {
    .navigation--main--special {
      height: 100%;
    }
    .show-only-mb {
      display:none !important;
    }
    body #shopify-section-header .logo-area__middle.logo-area__middle--logo-image {
      width: 100%;
      left: 0;
      transform: unset;
      display: flex;
      align-items: center;
      justify-content: center;
      padding-left: 54px;
      padding-right: 54px;
      border-bottom: 1px solid #9E9E9E;
    }
    body #shopify-section-header .navigation--main-left,
    body #shopify-section-header .navigation--main-right {
      flex: 1;
    }
    body #shopify-section-header .navigation--main-right {
      justify-content: space-between;
    }
    body #shopify-section-header .navigation--main-left {
      justify-content: flex-end;
    }
    .navigation__tier-1.pcShow {
      /* flex-wrap: wrap; */
      row-gap: 10px !important;
    }
  }
  @media (max-width: 767px) {
    .logo img {
      width: {{ section.settings.mobile_logo_img_width_int }}px;
    }
    .pcShow{
      display:none
    }
     .mbShow{
      display:block
    }
  }
  {%- if section.settings.enable_sticky -%}
  .section-header {
    position: -webkit-sticky;
    position: sticky;
  }
  {%- endif -%}
{% endstyle %}


{%- if settings.cart_type == "drawer" -%}
  <script src="{{ 'cart-drawer.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

